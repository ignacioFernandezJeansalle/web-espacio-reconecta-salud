---
interface Props {
  titles: string[];
}

const { titles } = Astro.props;
---

<section>
  <div class="container">
    <h1>
      {titles[0]}
      {
        titles[1] && (
          <>
            <br />
            <span>{titles[1]}</span>
          </>
        )
      }
    </h1>
    {titles[2] && <p>{titles[2]}</p>}
  </div>
</section>

<style lang="scss">
  section {
    background: rgb(var(--color-pink-light-rgb));

    div {
      padding-top: 120px;
      padding-bottom: 60px;

      h1 {
        color: rgb(var(--color-light-rgb));
        margin-bottom: 18px;

        span {
          color: rgb(var(--color-pink-dark-rgb));
        }
      }

      p {
        color: rgb(var(--color-light-rgb));
        font-family: Bashield, serif;
        font-weight: 400;
        font-size: calc(var(--font-size) * 1.6);
        text-align: center;
        text-wrap: balance;
        margin: 0;
      }
    }
  }

  @media (width <= 640px) {
    section {
      div {
        h1 {
          font-size: calc(var(--font-size) * 2.2);

          span {
            font-size: calc(var(--font-size) * 2);
          }
        }

        p {
          font-size: calc(var(--font-size) * 1.3);
        }
      }
    }
  }
</style>
