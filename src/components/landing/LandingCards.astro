---
const { cards } = Astro.props;
---

<div class="cards">
  {
    cards.map(({ name, thumbnail, alt, url }) => {
      return (
        <a href={url} aria-label={name}>
          <img src={thumbnail} alt={alt} />
        </a>
      );
    })
  }
</div>

<style>
  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, min(100%, 400px));
    gap: 16px;
    width: 100%;
    justify-content: center;
  }

  .cards a {
    transition: filter 0.3s;
  }

  .cards a:hover {
    cursor: pointer;
    filter: brightness(0.8);
  }

  .cards a img {
    display: block;
    width: 100%;
    height: auto;
    aspect-ratio: 507 / 367;
    border-radius: 4px;
  }
</style>
